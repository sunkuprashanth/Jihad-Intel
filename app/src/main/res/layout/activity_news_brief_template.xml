<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nb_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.JihadIntel.NewsBriefTemplate">
    <androidx.cardview.widget.CardView
        android:id="@+id/news_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card__border_radius"
        android:layout_margin="@dimen/layout_margin"
        android:saveEnabled="true"
        android:clickable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin"
            android:layout_margin="@dimen/layout_padding"
            android:orientation="vertical"
            android:background="@drawable/layout_border">
            <ImageView
                android:id="@+id/news_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_size"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:paddingLeft="@dimen/layout_padding"
                android:paddingRight="@dimen/layout_padding"
                android:src="@drawable/ic_launcher_background" />
            <TextView
                android:id="@+id/news_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Lorem Ipsum has been the industry's standard dummy text ever since the 1500."
                android:padding="@dimen/text_padding"
                android:lines="2"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_med"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/news_brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Lorem Ipsum has been the industry's standard dummy text ever since the 1500s when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                android:paddingLeft="@dimen/text_padding"
                android:paddingRight="@dimen/text_padding"
                android:paddingBottom="@dimen/text_padding"
                android:lines="3"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_short"/>
            <TextView
                android:id="@+id/news_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="null"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>