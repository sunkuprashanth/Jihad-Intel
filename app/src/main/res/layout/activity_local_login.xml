<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.JihadIntel.LocalLoginActivity"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/user_id"
            android:gravity="right|center_vertical"
            android:paddingRight="40dp"
            android:textSize="@dimen/text_size_med"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3">
            <EditText
                android:id="@+id/user_id"
                android:layout_width="@dimen/edittext_width"
                android:layout_height="wrap_content"
                android:hint="@string/hint_user_id"
                android:textSize="@dimen/text_size_med"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/password"
            android:gravity="right|center_vertical"
            android:paddingRight="40dp"
            android:textSize="@dimen/text_size_med"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3">
            <EditText
                android:id="@+id/password"
                android:layout_width="@dimen/edittext_width"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password"
                android:textSize="@dimen/text_size_med"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_register"
            android:textSize="@dimen/text_size_med"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/goto_register_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goto_register"
            android:paddingLeft="@dimen/layout_padding"
            android:textSize="@dimen/text_size_med"
            android:textColor="@color/blue"
            android:clickable="true"
            android:enabled="true"/>
    </LinearLayout>


</LinearLayout>